<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.ToolsFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/llBackTools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/modeLight">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/modeDark"
                    android:gravity="center"
                    android:text="Ingrese las tasas correspondiente de la moneda local de cada paÃ­s"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/v_item_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/background_today"
                                android:padding="5dp">
                                <Button
                                    android:id="@+id/btn_today_change1"
                                    android:layout_width="55dp"
                                    android:layout_height="match_parent"
                                    android:background="#00FFFFFF"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_today_country1"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/country_venezuela"/>

                                <TextView
                                    android:id="@+id/tv_today_simbol1"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@id/iv_today_country1"

                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:text="->"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_today_country11"
                                    android:layout_toRightOf="@id/tv_today_simbol1"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/country_colombia"/>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/iv_today_country11"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:id="@+id/et_today_value1"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="5dp"
                                        android:inputType="numberDecimal"
                                        android:background="@drawable/border_edittext"
                                        android:textColor="#fff"
                                        android:textColorHint="#919191"
                                        android:hint="Ejemplo: 0.001 COP/Bs"
                                        android:gravity="end|center_vertical" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_below="@id/iv_today_country1"
                                    android:background="#CCCCCC"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/v_item_2"
                        android:layout_below="@+id/v_item_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/background_today"
                                android:padding="5dp">
                                <Button
                                    android:id="@+id/btn_today_change2"
                                    android:layout_width="55dp"
                                    android:layout_height="match_parent"
                                    android:background="#00FFFFFF"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_today_country2"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/country_usa"/>

                                <TextView
                                    android:id="@+id/tv_today_simbol2"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@id/iv_today_country2"

                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:text="->"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_today_country22"
                                    android:layout_toRightOf="@id/tv_today_simbol2"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/country_venezuela"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/iv_today_country22"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:id="@+id/et_today_value2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="5dp"
                                        android:inputType="numberDecimal"
                                        android:background="@drawable/border_edittext"
                                        android:textColor="#fff"
                                        android:textColorHint="#919191"
                                        android:hint="Ejemplo: 300 000.00 Bs/$"
                                        android:gravity="end|center_vertical" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_below="@id/iv_today_country2"
                                    android:background="#CCCCCC"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/v_item_3"
                        android:layout_below="@+id/v_item_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:cardCornerRadius="10dp"
                            android:layout_margin="10dp">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@drawable/background_today"
                                android:padding="5dp">
                                <Button
                                    android:id="@+id/btn_today_change3"
                                    android:layout_width="55dp"
                                    android:layout_height="match_parent"
                                    android:background="#00FFFFFF"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_today_country3"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/country_usa"/>

                                <TextView
                                    android:id="@+id/tv_today_simbol3"
                                    android:layout_width="40dp"
                                    android:layout_height="match_parent"
                                    android:layout_toRightOf="@id/iv_today_country3"

                                    android:textColor="#FFFFFF"
                                    android:textStyle="bold"
                                    android:textSize="18sp"
                                    android:gravity="center"
                                    android:text="->"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/iv_today_country33"
                                    android:layout_toRightOf="@id/tv_today_simbol3"
                                    android:layout_width="30dp"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/country_colombia"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/iv_today_country33"
                                    android:orientation="horizontal">
                                    <EditText
                                        android:id="@+id/et_today_value3"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:paddingLeft="5dp"
                                        android:paddingRight="7dp"
                                        android:paddingBottom="5dp"
                                        android:inputType="numberDecimal"
                                        android:background="@drawable/border_edittext"
                                        android:textColor="#fff"
                                        android:textColorHint="#919191"
                                        android:hint="Ejemplo: 3300.00 COP/$"
                                        android:gravity="end|center_vertical" />
                                </LinearLayout>

                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="3dp"
                                    android:layout_below="@id/iv_today_country3"
                                    android:background="#CCCCCC"/>
                            </RelativeLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/v_item_5"
                        android:layout_below="@+id/v_item_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_today_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="20dp"
                            android:textStyle="bold"
                            android:textColor="#fff"
                            android:elevation="4dp"
                            android:background="@drawable/button_design"
                            android:text="Guardar"
                            tools:ignore="UnusedAttribute"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="20dp" />
                    </LinearLayout>

                </RelativeLayout>

                <Switch
                    android:id="@+id/sw_mode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="10dp"
                    android:textColor="@color/modeDark"
                    android:text="Modo Dark"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>




</FrameLayout>