<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="10dp"
        android:layout_margin="10dp">
        <LinearLayout
            android:id="@+id/v_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/background_today"
                    android:padding="5dp">
                    <Button
                        android:id="@+id/btn_today_change1"
                        android:layout_width="55dp"
                        android:layout_height="match_parent"
                        android:background="#00FFFFFF"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_spn_country"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/country_usa"/>

                    <TextView
                        android:id="@+id/tv_spn_simbol"
                        android:layout_width="40dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/iv_spn_country"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:text="$"/>

                    <CheckBox
                        android:id="@+id/btn_item_1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@id/tv_spn_simbol"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/btn_item_1"
                        android:orientation="horizontal">
                        <EditText
                            android:id="@+id/et_spn_value"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="5dp"
                            android:paddingRight="7dp"
                            android:paddingBottom="5dp"
                            android:enabled="true"
                            android:inputType="numberDecimal"
                            android:background="@drawable/border_edittext"
                            android:textColor="#fff"
                            android:textColorHint="#919191"
                            android:hint="0.00"
                            android:gravity="end|center_vertical" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="3dp"
                        android:layout_below="@id/iv_spn_country"
                        android:background="#CCCCCC"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>