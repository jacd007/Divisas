<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragment.TodayFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/llBackToday"
        android:background="@color/modeLight"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/v_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/background_today"
                            android:padding="5dp">
                            <Button
                                android:id="@+id/btn_today_change1"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_today_country1"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/country_usa"/>

                            <TextView
                                android:id="@+id/tv_today_simbol1"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/iv_today_country1"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:text="$"/>

                            <CheckBox
                                android:id="@+id/btn_item_1"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/tv_today_simbol1"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/btn_item_1"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/et_today_value1"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="7dp"
                                    android:paddingBottom="5dp"
                                    android:enabled="false"
                                    android:inputType="numberDecimal"
                                    android:background="@drawable/border_edittext"
                                    android:textColor="#fff"
                                    android:textColorHint="#919191"
                                    android:hint="0.00"
                                    android:gravity="end|center_vertical" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_below="@id/iv_today_country1"
                                android:background="#CCCCCC"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v_item_2"
                    android:layout_below="@+id/v_item_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/background_today"
                            android:padding="5dp">
                            <Button
                                android:id="@+id/btn_today_change2"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_today_country2"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/country_colombia"/>

                            <TextView
                                android:id="@+id/tv_today_simbol2"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/iv_today_country2"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:text="COP"/>

                            <CheckBox
                                android:id="@+id/btn_item_2"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/tv_today_simbol2"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/btn_item_2"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/et_today_value2"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="7dp"
                                    android:paddingBottom="5dp"
                                    android:enabled="false"
                                    android:inputType="numberDecimal"
                                    android:background="@drawable/border_edittext"
                                    android:textColor="#fff"
                                    android:textColorHint="#919191"
                                    android:hint="0.00"
                                    android:gravity="end|center_vertical" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_below="@id/iv_today_country2"
                                android:background="#CCCCCC"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v_item_3"
                    android:layout_below="@+id/v_item_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="10dp"
                        android:layout_margin="10dp">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:background="@drawable/background_today"
                            android:padding="5dp">
                            <Button
                                android:id="@+id/btn_today_change3"
                                android:layout_width="55dp"
                                android:layout_height="match_parent"
                                android:background="#00FFFFFF"/>

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/iv_today_country3"
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/country_venezuela"/>

                            <TextView
                                android:id="@+id/tv_today_simbol3"
                                android:layout_width="40dp"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@+id/iv_today_country3"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="18sp"
                                android:gravity="center"
                                android:text="Bs"/>

                            <CheckBox
                                android:id="@+id/btn_item_3"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_toRightOf="@id/tv_today_simbol3"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:layout_toRightOf="@id/btn_item_3"
                                android:orientation="horizontal">
                                <EditText
                                    android:id="@+id/et_today_value3"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:paddingLeft="5dp"
                                    android:paddingRight="7dp"
                                    android:paddingBottom="5dp"
                                    android:enabled="false"
                                    android:inputType="numberDecimal"
                                    android:background="@drawable/border_edittext"
                                    android:textColor="#fff"
                                    android:textColorHint="#919191"
                                    android:hint="0.00"
                                    android:gravity="end|center_vertical" />
                            </LinearLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_below="@id/iv_today_country3"
                                android:background="#CCCCCC"/>
                        </RelativeLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/v_item_4"
                    android:layout_below="@+id/v_item_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvh1"
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="Cambiar de 'Bs.' a 'COP'"/>
                        <TextView
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_today_rates1"
                            android:minLines="1"
                            android:maxLines="2"
                            android:padding="6dp"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text=" 0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvh2"
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="Cambiar de 'Bs.' a  '$'"/>
                        <TextView
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_today_rates2"
                            android:minLines="1"
                            android:maxLines="2"
                            android:padding="6dp"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text=" 0"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tvh3"
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text="Cambiar de 'COP.' a  '$'"/>
                        <TextView
                            android:layout_weight=".5"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tv_today_rates3"
                            android:minLines="1"
                            android:maxLines="2"
                            android:padding="6dp"
                            android:textColor="#000"
                            android:textStyle="normal"
                            android:textSize="15sp"
                            android:text=" 0"/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v_item_6"
                    android:layout_below="@+id/v_item_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:visibility="gone"
                    android:orientation="horizontal">


                    <Button
                        android:id="@+id/btn_today_accept"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:elevation="4dp"
                        android:paddingRight="40dp"
                        android:paddingLeft="40dp"
                        android:background="@drawable/button_design"
                        android:text="Calcular"
                        tools:ignore="UnusedAttribute"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/v_item_5"
                    android:layout_below="@+id/v_item_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="5dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_today_clear"
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="10dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:elevation="4dp"
                        android:background="@drawable/button_design"
                        android:text="Limpiar"
                        tools:ignore="UnusedAttribute"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp" />

                    <Button
                        android:id="@+id/btn_today_view"
                        android:layout_weight=".5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:elevation="4dp"
                        android:background="@drawable/button_design"
                        android:text="Aceptar"
                        tools:ignore="UnusedAttribute"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="20dp" />
                </LinearLayout>


            </RelativeLayout>
        </ScrollView>
    </LinearLayout>




</FrameLayout>